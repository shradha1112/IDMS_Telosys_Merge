/* label color style */
label{
    color: black;
}

/* placehoder color */
input::-webkit-input-placeholder {      
  color: #808080 !important;        
}

/* style for placeholder textarea */
textarea::-webkit-input-placeholder {
  color: #808080 !important; 
  }
/* badge style for ICD 10 PAGE */
.badge-style{
  background-color: white;
  color:#008CBA;
  left:10px;
}

.badge-style-change{
  background-color: #008CBA;
  color:white;
  left:10px;
}

.activeButton{
  background-color: #e1eef4 !important; 
}

/* style for vertical button group in icd10  */
.btn-group-vertical{
      box-shadow: -5px 5px 25px  #888888;
      width: 410px !important; 
}

/* checkbox css for icd 10 */
input[type=checkbox] + label {                
  display: block !important ;
  margin: 0.7em !important;
  cursor: pointer !important;
  padding-left:6px !important; 
}


/* style for ICD 10 page Vertical button  for max screen size 768px*/
@media screen and (max-width: 768px) {
.btn-group-vertical{
  width: 645px !important; 
}
}


/* label styles */
.label-style{
font-weight: 500;
}

.header-style{
color: white;
font-weight: 600;
}
/* style for horizontal line */
hr{
    margin-top: 0px;
    margin-bottom: 3px;
    border-top:2px solid #eee;
}

/* font weight for input field */
.input-size{
  font-weight: 400;
  color: white;
}

/* alert error msg style */
 .EncErrorMsg-style{
  padding-left:275px;
  margin-top:-43px;
} 

/*style after checkbox disabled  */
input[type=checkbox][_ngcontent-c6]:checked:disabled + label[_ngcontent-c6]:before{
  background-color: #0480c8;
  border-color: #0480c8;
}
/* style for age field */
.ageField-style{
 text-align: center;
 border-bottom:none !important;
}


/* style for question group list on lis encounter page */
.listgroup-style{
  background-color: #f5f5f0;
  color:#0471af;
}

.header-contents{
  background-color: #03659d;
  margin-right:17px !important;
  margin-left:17px !important;
  box-shadow: 5px 8px 38px  #888888;
}
/* style for level of acuity  */
.collapse-card-style{
  width:52pc;
}
.expand-Panel-Style{
  width:54pc;
}

 /* style for collapse panel(level of acuity) */
 #change-collapse1:after {
  content: '\002B';         
  color: #1d7fb7;
  font-weight: bold;
  font-size: 12px !important;
  margin-top:0px !important;
  float: right;
  margin-left: 5px;
  }
  
  .active1:after {
  content: "\2212" !important;

  }
 /* style for btn icon (icd10)  */
  .btn-icon{
    padding: 7px 0px !important;
  }

  /* style for edit encounter  */
  .activeButton{
    background-color: #e1eef4 !important; 
  }
