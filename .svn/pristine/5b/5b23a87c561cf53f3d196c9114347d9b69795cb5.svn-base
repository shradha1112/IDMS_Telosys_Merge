    </nav>
    <div class="full-page login-page" filter-color="none">
        <div class="content">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-sm-4 col-md-offset-3 col-sm-offset-4">
                        <form [formGroup]="resetForm" class="form">
                            <div *ngIf="statusCode ">
                                <div class="card">
                                    <div class="card-header text-center" data-background-color>
                                        <h4 class="card-title">Reset Password</h4>
                                    </div>
                                    <div *ngIf="statusCode===200">
                                        <div class="card-content">
                                            <div *ngIf="resetStatusCode === 201" class="alert alert-success" data-icon-bg-color="alert-green">
                                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                                <strong>Success!</strong> Password has been changed. <a routerLink="./login"
                                                    class="alert-link" style="color:green !important;">Please click here to login!</a>
                                            </div>
                                            <div *ngIf="resetStatusCode === 406" class="alert alert-danger" data-icon-bg-color="alert-red">
                                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                                <strong>Sorry!</strong> Internal error.Pleases try again later.
                                            </div>
                                            <div *ngIf="!resetStatusCode" class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="material-icons">lock_outline</i>
                                                </span>
                                                <div class="form-group label-floating">

                                                    <input id="newpassword" type="password" placeholder="New Password"
                                                        formControlName="newpassword" class="form-control">
                                                    <ehr-field-error-display [displayError]="isFieldValid(resetForm, 'newpassword')"
                                                        errorMsg="Password is required & it must contain a capital letter, a small letter, a special character and a digit. Minimum password length must be 9 characters">
                                                    </ehr-field-error-display>
                                                </div>
                                            </div>
                                            <div *ngIf="!resetStatusCode" class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="material-icons">lock_outline</i>
                                                </span>
                                                <div class="form-group label-floating">
                                                    <input id="confirmpassword" type="password" placeholder="Confirm Password"
                                                        formControlName="confirmpassword" class="form-control">
                                                    <ehr-field-error-display [displayError]="resetForm.controls.confirmpassword.errors?.passMatch"
                                                        errorMsg="Passwords Do not match">
                                                    </ehr-field-error-display>

                                                </div>
                                            </div>
                                        </div>
                                        <div *ngIf="!resetStatusCode" class="footer text-center">
                                            <button type="submit" [disabled]="isDisabled" id="submit" class="btn btn-info btn-round"
                                                (click)="onSubmit()">
                                                Submit</button>
                                        </div>
                                    </div>
                                    <div *ngIf="statusCode === 409" class="alert alert-danger" data-icon-bg-color="alert-red">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                        <strong>Sorry!</strong> Your Password has been expired. <a href="./recover"
                                            class="alert-link">Please reset your password again.</a>
                                    </div>
                                    <div *ngIf="statusCode === 404" class="alert alert-danger" data-icon-bg-color="alert-red">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                        <strong>Sorry!</strong> The Link is invalid. Please check the link and try
                                        again.
                                    </div>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <footer class="footer">
            <div class="container-fluid">
                <nav class="pull-left">
                    <ul>
                        <li>
                            <a style="color: black" href="http://www.cloudpointamerica.com">
                                Company
                            </a>
                        </li>
                        <li>
                            <a style="color: black" href="http://www.cloudpointamerica.com/about-us.html">
                                About
                            </a>
                        </li>
                        <li>
                            <a style="color: black" href="http://www.cloudpointamerica.com/ehr-emr.html">
