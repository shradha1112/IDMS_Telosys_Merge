
/* height of the form is given */
.form-group{
    top: 20px;
    height: 65px
    
} 

.disabled {
    cursor: not-allowed;
    pointer-events:visible;
  }

.customfloat{
    -webkit-transform:translate(0px,-20px);

    font-size:11px !important;
}
/* content space for add patient module */
.adjust-content{
