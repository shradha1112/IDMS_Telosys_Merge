.datepicket-label-style {
    top: -42% !important;
    font-size: 8px !important;
}

/* disable the loginId field for update staff  */
.disableLoginId{
    pointer-events:none;
    background-color: rgb(240, 240, 240);
}
/* css for success and conflict messages in admin tools */
.alert{
        margin-top: 1%;
        margin-bottom: 1%;
    }

/* md2-select value style */
::ng-deep .md2-select-value{
        color: black !important;
        font-weight: 400;
    }

/*style for list page */
table tr:nth-child(odd) {
    background-color: white;
  }

table tr:nth-child(even) {
    background-color: #e1eef4;
  }

/*style for table header */
  table thead tr th{
    background-color: #0471AF;
    color: white;
    font-weight: 700;
    font-size: 12px;
    border-right-style:solid;
    border-right-color:#ddd;
    border-right-width: 1px ; 
    border-left-style:solid;
    border-left-color:#ddd;  
    border-left-width: 1px ;  
    border-top-style:solid;
    border-top-color:#ddd;
    border-top-width: 1px ;     

}

/* form group label styel */
  .form-group label{
      color: rgb(0, 0, 0);
  }

/* height for seach record field */
.searchHeight{
    top:-10px;
}

/* style for radio to be inline */
.radio-inline{
    top:-4px;
}

/* card content position for admin tool module */
.card-content-position{
    top:-20px !important;
}
/* style for button position */
.btn-position{
    top: -6px; 
    left:-138px !important;
}

/* color for form control */
::ng-deep .form-control, .form-group .form-control
{
    color : rgb(0, 0, 0);
}


/* 'Add Encounter Location' button alignment for screen size 768px */
 @media screen and (max-width: 768px) {
    .button-align{
      left:50px !important;
    }
}






