import { Injectable } from '@angular/core';
import { Http, Response, Headers, RequestOptions, URLSearchParams } from '@angular/http';
import { Observable } from 'rxjs';
import { AppSettings } from '../../appsettings';
import { ConsultantNotes } from '../models/consultantNotes';

@Injectable()
export class ConsultantNotesService {
    addConsultantNotesUrl = AppSettings.API_ENDPOINT + "./consultantnotes/createConsultantNotes";
    getConsultantNotesByPatientIdUrl = AppSettings.API_ENDPOINT + "./consultantnotes/getPatientConsultantNotesById";
    constructor(private http: Http) {
    }


    //insert consultant Notes
    insertConsultantNotesResult(consultantNotesData: ConsultantNotes): Observable<number> {
        let cpHeaders = new Headers({ 'Content-Type': 'application/json', "x-auth-token": localStorage.getItem('jwt') });
        let options = new RequestOptions({ headers: cpHeaders });

        return this.http.post(this.addConsultantNotesUrl, consultantNotesData, options)
            .map(success => success.status)
            .catch(this.handleError);
    }

    getConsultantNotesByPatientId(patientId: number):Observable<ConsultantNotes[]>{
        let cpHeaders = new Headers({ 'Content-Type': 'application/json', "x-auth-token": localStorage.getItem('jwt') });
		let cpParams = new URLSearchParams();
        cpParams.set('patientId', patientId.toString());
        let options = new RequestOptions({ headers: cpHeaders, params: cpParams });
		return this.http.get(this.getConsultantNotesByPatientIdUrl, options)
			.map(this.extractData)
			.catch(this.handleError);
    }
    private extractData(res: Response) {
        let body = res.json();
        return body;
    }

    private handleError(error: Response | any) {
        console.error(error.message || error);
        return Observable.throw(error.status);
    }

}