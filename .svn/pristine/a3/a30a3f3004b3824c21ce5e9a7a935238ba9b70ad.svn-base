  #timer{ 
    color:#0471af; 
    top:5px;
    font-size:21px; 
    /* margin:5px auto; */
    margin-left: 5px;
    border : 5px solid #0471af;
    border-radius:50%;
    width:70px;
    height:70px;
    overflow:hidden;
    position:relative;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    cursor:default;
  }
  
  #time{
    margin-top:20px;
    margin-left: 5px;
    z-index : 1;
    position:relative;
  }
  
  .changeme{
      color:palevioletred ;
      border : 5px solid palevioletred ;
  }


  
  #timer.work{
    border : 5px solid #f00;
    color:#f00;
  }
  
  
  #timer.relax{
    border : 5px solid #0f0;
    color:#0f0;
  }