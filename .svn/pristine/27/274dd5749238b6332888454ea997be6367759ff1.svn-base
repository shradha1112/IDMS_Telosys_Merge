<div class="wrapper wrapper-full-page">
    <nav class="navbar navbar-info navbar-fixed-top navbar-style">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#menu-example">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <strong><a class="navbar-brand" href="http://www.cloudpointamerica.com">EHR LITE</a></strong>
            </div>
            <div class="collapse navbar-collapse" id="menu-example">
                <ul class="nav navbar-nav navbar-right">
                    <div class="collapse navbar-collapse" id="menu-example">
                        <ul class="nav navbar-nav navbar-right">
                            <li class="">
                                <a routerLink="/login">
                                    <i class="material-icons">fingerprint</i> Sign In
                                </a>
                            </li>
                            <li class="">
                                <a routerLink="/recover">
                                    <i class="material-icons">verified_user</i> Recover
                                </a>
                            </li>

                        </ul>
                    </div>
                </ul>
            </div>
        </div>
    </nav>
    <div class="full-page login-page" filter-color="none">
        <!--  you can change the color of the filter page using: data-color="blue | purple | green | orange | red | rose | none " -->
        <div class="content">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-sm-8 col-md-offset-3 col-sm-offset-2">
                        <form [formGroup]="loginForm"
                            (ngSubmit)="onLogin(userName.value, password.value); $event.preventDefault()" class="form">

                            <div class="card">
                                <div class="card-header text-center" data-background-color>
                                    <h4 class="card-title">EHR Login</h4>
                                </div>
                                <div class="card-content">
                                    <div *ngIf="isExpired||statusCode">
                                        <div *ngIf="isExpired&&statusCode!==401"
                                            class="alert alert-danger change-width" data-icon-bg-color="alert-red">
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                            <strong>Sorry!</strong> Your Session is Expired.

                                        </div>
                                        <div *ngIf="statusCode===401" class="alert alert-danger col-md-offset-3" data-icon-bg-color="alert-red">
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                            <strong>Sorry!</strong> Invalid Login Credentials.
                                        </div>
                                    </div>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="material-icons">face</i>
                                        </span>
                                        <div class="form-group label-floating">
                                            <!-- <input id="userName" type="text" placeholder="User Name" #userName formControlName="userName" class="form-control" > -->
                                            <mat-form-field floatPlaceholder="never">
                                                <input matInput id="userName" class="matInput" type="text" #userName
                                                    formControlName="userName">
                                                <mat-placeholder class="placeholder">User Name</mat-placeholder>
                                            </mat-form-field>
                                            <div style="margin-top:-18px">
                                                <ehr-field-error-display
                                                    [displayError]="isFieldValid(loginForm, 'userName')"
                                                    errorMsg="User Name is required and must be minimum 3 characters">
                                                </ehr-field-error-display>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="material-icons">lock_outline</i>
                                        </span>
                                        <div class="form-group label-floating">
                                            <mat-form-field floatPlaceholder="never">
                                                <input matInput id="password" class="matInput"
                                                    [type]="hide ? 'text' : 'password'" #password
                                                    formControlName="password">
                                                <mat-icon matSuffix (click)="hide = !hide">
                                                    {{hide ? 'visibility' : 'visibility_off'}}</mat-icon>
                                                <mat-placeholder class="placeholder">Password</mat-placeholder>
                                            </mat-form-field>
                                            <div style="margin-top:-18px">
                                                <ehr-field-error-display
                                                    [displayError]="isFieldValid(loginForm, 'password')"
                                                    errorMsg="Password is required">
                                                </ehr-field-error-display>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="footer text-center">
                                    <button type="submit" class="btn btn-info btn-round" id="signIn">
                                        Sign In</button>
                                </div>
                                <p class="category text-center">
                                    Forgot Username or Password?
                                </p>
                                <div class="footer text-center">
                                    <button routerLink="/recover" type="button" class="btn btn-info btn-round">
                                        Recover </button>
                                </div>
                                <p class="category text-center">
                                    Saving your password in your browser is not recommended
                                </p>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
        <footer class="footer">
            <div class="container-fluid">
                <nav class="pull-left">
                    <ul>
                        <li>
                            <a style="color: black !important" href="http://www.cloudpointamerica.com">
                                Company
                            </a>
                        </li>
                        <li>
                            <a style="color: black !important" href="http://www.cloudpointamerica.com/about-us.html">
                                About
                            </a>
                        </li>
                        <li>
                            <a style="color: black !important" href="http://www.cloudpointamerica.com/ehr-emr.html">
                                EHR LITE
                            </a>
                        </li>
                        <li>
                            <a style="color: black !important" href="http://www.cloudpointamerica.com/contact-us.php">
                                Contact
                            </a>
                        </li>
                    </ul>
                </nav>
                <p style="color: black" class="copyright pull-right">
                    &copy; {{test | date: 'yyyy'}} <a style="color: black !important"
                        href="http://www.cloudpointamerica.com">CloudPoint Systems Inc</a>, made with <span
                        style="color:red;font-size:20px"> &hearts; </span> for a better Electronic Health Records
                </p>
            </div>
        </footer>
    </div>
</div>